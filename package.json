{
  "name": "web-messenger",
  "version": "0.0.0",
  "description": "Web Messenger Yandex Practicum",
  "main": "index.js",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "yarn run prebuild && vite build",
    "start": "yarn run build && node server.cjs",
    "preview": "vite preview"
  },
  "repository": "https://github.com/inesterovich/web-messenger.git",
  "author": "Ilya Nesterovich <developer@inesterovich.ru>",
  "dependencies": {
    "express": "^4.19.2",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "eslint": "8.56.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "postcss": "^8.4.47",
    "sass": "^1.78.0",
    "stylelint": "^16.9.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "2.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vite": "^5.4.3",
    "vite-plugin-checker": "^0.8.0"
  }
}
